#!/usr/bin/env bash
set -e

cd "$(dirname "$0")"

# Stow dotfiles
stow --verbose \
  nvim \
  tmux \
  git \
  ghostty \
  opencode \
  mise

# Install mise if not already installed
if ! command -v mise &>/dev/null; then
  echo "Installing mise..."
  curl -fsSL https://mise.run | sh
fi

# Install all tools defined in mise config
mise install
